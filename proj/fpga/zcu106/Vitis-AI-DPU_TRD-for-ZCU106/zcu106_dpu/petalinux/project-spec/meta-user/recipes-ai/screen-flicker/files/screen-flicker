main()
{
port_type_set
S_AXI_HP0_FPD	2  15 15  2
S_AXI_HP1_FPD	15 15 15  2
S_AXI_HP2_FPD   15 15 15  2
S_AXI_HP3_FPD   15 15 15  2
S_AXI_HPC0_FPD	15 15 15  2
S_AXI_HPC1_FPD	15 15 15  2
}

main "$@"
